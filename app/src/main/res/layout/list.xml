<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/bk1"
        android:layout_marginTop="10dp"
        android:layout_width="283dp"
        android:layout_height="262dp"
        android:backgroundTint="#D9D9D9"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mobil"
                android:layout_width="283dp"
                android:layout_height="173dp"
                android:src="@drawable/hrv" />

            <TextView
                android:id="@+id/merk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobil"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="6dp"
                android:text="Honda HR-V 2022"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/merk"
                android:layout_marginLeft="29dp"
                android:text="Bandung, Jawa Barat"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobil"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/merk"
                android:text="RP 500.000"
                android:textAlignment="textEnd"
                android:layout_marginRight="7dp"
                android:textColor="#001A72"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@+id/merk"
                android:text="per hari"
                android:textAlignment="textEnd"
                android:textColor="#001A72"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bintang"
                android:layout_below="@+id/kota"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>